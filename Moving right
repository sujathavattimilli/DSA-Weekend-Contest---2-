#include <bits/stdc++.h> // header file includes every Standard library
using namespace std;

int main() {

	int n;
    cin>>n;
    int count = 0;
    int count1 = 0, count2 = 0;
    int arr[n];
    for(int i=0; i<n; i++)
    {
       cin>>arr[i];
    }
    for(int i=0; i<=n; i++)
    {
        if(arr[i]>=arr[i+1])
       {
           count++;
       }
       else{
           count1 = max(count1, count);
           count=0;
       }
    }

	count1 = max(count1, count);
    cout<<count1<<endl;
	return 0;
}
